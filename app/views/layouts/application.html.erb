<!DOCTYPE html>
<html>
<head>
  <title>Armadillo</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <ul id="flash">
    <% flash.each do |type, message| -%>
      <%= content_tag :li, h(message), :class => h(type) %>
    <% end -%>
  </ul>

  <ul id="nav">
    <% if signed_in? -%>
      <li><%= link_to t('filter.list'), filters_path %></li>
      <li><%= link_to t('session.destroy_link'), logout_path %></li>
    <% else -%>
      <li><%= link_to t('session.create_link'), login_path %></li>
      <li><%= link_to t('user.create_link'), new_user_path %></li>
    <% end -%>
  </ul>

  <%= yield %>

</body>
</html>
